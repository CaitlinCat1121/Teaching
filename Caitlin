import.edw.wpi.first.wpilibj.Joystick;

public class Robot extends InterativeRobot {

  private Spark spark1;
  private Spark spark2;
  private Spark spark3;
  private Spark spark4;
  private Spark spark5;
  
  DriverStation matchInfo = DriverStation.getInstance();
  
  Joystick joy1 = new Joystick(0);
  }
  
  public void autonnomousPeriodic() {
  
  }
  
  public void teleopInit() {
  
  }
  
  public void teleopperiodic() {
    double y = joy1.getRawAxis(1);
    doubly x = joy1.getRawAxis(0);
    double z = joy1.getRawAxis(2);
    
    spark1.set(y);
    spark2.set(-y);
    spark1.set(x);
    spark2.set(-x);
    spark1.set(z);
    spark2.set(-z);
    
    if(joy1.getRawButton(1) {
    spark3.set(0.5);
    }
    
    if(joy1.getRawButton(2) {
    spark3.set(-0.5);
    }
    
    if(joy1.getRawButton(3) {
    spark4.set(0.5);
    spark5.set(-0.5);
    }
    
    if(joy1.getRawButton(4) {
    spark4.set(-0.5);
    spark5.set(o.5);
    }
    
    
    
    
    
    
